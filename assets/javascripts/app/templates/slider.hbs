<div class="carousel slide">
{{view view.slidesView}}
<a class="left carousel-control" {{action 'prevSlide' target='view'}}>
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" {{action 'nextSlide' target='view'}}>
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
<script>
  $('.carousel').carousel()
</script>
